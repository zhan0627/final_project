<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/toolbar3"
        android:background="#AFAFAF"/>

    -<androidx.drawerlayout.widget.DrawerLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start">

    <!-- THIS IS WHAT IS VISIBLE ON SCREEN:-->



    -<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainTrivia"
    android:gravity="center">

    <TextView
        android:id="@+id/textView"
        android:layout_width="163dp"
        android:layout_height="274dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="60dp"
        android:text="@string/function4"
        android:textColor="@color/red"
        android:textSize="25dp" />

    <Button
        android:id="@+id/bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BackTo" />

    <TextView
        android:id="@+id/myrating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="140dp"
        android:text="edittext input message"
        android:textSize="20sp" />


</LinearLayout>

    <!-- THIS IS WHAT IS WHAT POPS OUT FROM THE SIDE:-->


    <com.google.android.material.navigation.NavigationView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:menu="@menu/soccer_activity_main"
        app:headerLayout="@layout/soccer_navigation_header"
        android:fitsSystemWindows="true"/>
</androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>


