<LinearLayout
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:background="#AFAFAF"/>


    -<androidx.drawerlayout.widget.DrawerLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start">

    <!-- THIS IS WHAT IS VISIBLE ON SCREEN:-->



    -<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainTrivia"
    android:gravity="center">

    <ImageView
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/route"
        android:layout_gravity="center"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/Namelbl"
        android:text="@string/UserName"/>

    <EditText
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:id="@+id/EnterName"
        android:hint="@string/EnterName"
        android:textSize="15dp"
        android:inputType="textPersonName|textCapWords"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/question"
        android:text="@string/question"
        android:textSize="15dp"/>

    <SeekBar
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/SeekBar"
        android:progress="10"
        android:max="15"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/selection_type1"
        android:text="@string/selection_type1"
        android:textSize="15dp"/>


    -<RadioGroup
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/radio1"
        android:text="@string/CheckBox1"/>

    <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/radio2"
        android:text="@string/CheckBox2"/>

    <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/radio3"
        android:text="@string/CheckBox3" android:visibility="gone"/>

</RadioGroup>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/selection_type2"
        android:text="@string/selection_type2"
        android:textSize="15dp"/>


    -<RadioGroup
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/radio4"
        android:text="@string/CheckBox4"/>

    <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/radio5"
        android:text="@string/CheckBox5"/>

    <RadioButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/radio6"
        android:text="@string/CheckBox6"/>

</RadioGroup>

    <Button
        android:layout_height="49dp"
        android:layout_width="280dp"
        android:id="@+id/home_start"
        android:layout_gravity="center"
        android:text="@string/start"
        android:visibility="visible"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/highScore"
        android:text="@string/high_score"
        android:backgroundTint="#007A98"/>

</LinearLayout>

    <!-- THIS IS WHAT IS WHAT POPS OUT FROM THE SIDE:-->


    <com.google.android.material.navigation.NavigationView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:menu="@menu/example_menu"
        app:headerLayout="@layout/navigation_header"
        android:fitsSystemWindows="true"/>

</androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>